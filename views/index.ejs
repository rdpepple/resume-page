    <script>
        // Get the icons that open the modal

        var modal;

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks a app selection icon, open the modal 
        function ghinMeanOnclick() {
            // Get the modal
            document.getElementById("appIconModalHeader").innerHTML = "GHIN Calculator MEAN Stack App";
            document.getElementById("appIconModalBody").innerHTML = "<p>This application was developed with the MEAN stack. It utilizes MongoDB, Express, Angular, node.js, and webpack.</p><p>The app provides golf GHIN calculation for multiple users. The MongoDB storage is implented with encrypted user storage.</p>";
            modal = document.getElementById("appModal");
            modal.style.display = "block";
        }

        function ghinJavaAppOnclick() {
            // Get the modal
            document.getElementById("appIconModalHeader").innerHTML = "GHIN Calculator JAVA Application";
            document.getElementById("appIconModalBody").innerHTML = "<p>This application was developed in the Netbeans IDE. It utilizes mySQL, JAVA, and JavaFX Scene Builder.</p><p>The app provides golf GHIN handicap calculation locally, with data storage in a mySQL database</p>";
            modal = document.getElementById("appModal");
            modal.style.display = "block";
        }

        // When the user clicks on <span> (x), close the modal
        span.onclick = function() {
            modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }          
    </script>
